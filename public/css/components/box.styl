.box
    background-color $color-white
    border-radius $radius-default
    box-shadow 0 1px 2px rgba(0, 0, 0, .5)
    position relative
    
    &__header
        padding 20px
        position relative
        
        @media $sm-up
            padding 30px
            
        & + .box__body
            padding-top 0

    &__body
        padding 20px
        
        @media $sm-up
            padding 30px
            
        & + .box__body
            padding-top 0
