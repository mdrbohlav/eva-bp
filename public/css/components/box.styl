.box
    background-color $color-white
    border-radius $radius-default
    box-shadow 0 1px 2px rgba(0, 0, 0, .5)
    position relative
    
    &__header
        padding 20px
        position relative
        
        @media $sm-up
            padding 30px

    &__body
        padding 0 20px 20px
        
        @media $sm-up
            padding 0 30px 30px
            
        &--paddingEverywhere
            padding 20px
        
            @media $sm-up
                padding 30px
