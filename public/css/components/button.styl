btn()
    appearance none
    background-color transparent
    border 1px solid transparent
    border-radius $radius-default
    box-shadow 0 1px 2px 0 rgba(0, 0, 0, .5)
    cursor pointer
    display inline-block
    font-family $font-roboto
    font-weight 100
    line-height 1
    padding 9px 16px
    set-font-size 16px
    text-align center
    transition background-color .2s ease-in-out, border-color .2s ease-in-out, box-shadow .2s ease-in-out, color .2s ease-in-out
    min-width 88px

    &:focus
        outline none
        
    &:active
        box-shadow 0 2px 16px -1px rgba(0, 0, 0, .5)
        
    &[disabled]
        cursor not-allowed
        opacity(.25)
        
    &:after
        display none

.btn
    btn()
    
    & + .btn
        margin-left 10px
        
        @media $sm-up
            margin-left 20px
                
    &__teal
        border-color $color-teal
        color $color-teal
        
        &:hover
            background-color $color-teal-600
            color $color-white
        
        &:focus,
        &:active
            background-color $color-teal-700
            color $color-white
            
        &--full
            background-color $color-teal
            color $color-white
            
            &:hover
                background-color $color-teal-600
                border-color $color-teal-600
                color $color-white
                
            &:focus,
            &:active
                background-color $color-teal-700
                border-color $color-teal-700
                color $color-white
