.sequence
    reset-list()
    
    li
        opacity 0
        transform scaleX(0)
        transform scaleY(0)

    &--text
        margin 0 -8px

        li
            margin 0 8px 15px
            
    &--images
        font-size 0
        
        li
            display inline-block
            margin 0 1% 15px
            overflow hidden
            padding-bottom 48%
            position relative
            width 48%
            
            @media $sm-up
                padding-bottom 23%
                width 23%
            
        .itemNumber
            border-radius 0
            border-top-left-radius $radius-default
            border-bottom-right-radius $radius-default
            left 0
            position absolute
            top 0
            z-index 2
            
        .image
            border-radius $radius-default
            bottom 0
            left 0
            margin auto
            position absolute
            right 0
            top 0
            max-height 100%
            max-width 100%
            z-index 1
            
