.field__radio
    .field
        border none
        padding-top 8px
        padding-bottom 7px
        
        @media $md-up
            padding-top 8px
            padding-bottom 7px

.radio
    border 1px solid $color-blue-grey
    border-radius 50%
    display inline-block
    position relative
    top -1px
    vertical-align middle
    size(12px)
        
    &:before
        background-color transparent
        border-radius 50%
        content ''
        display inline-block
        left 1px
        position absolute
        top 1px
        size(8px)
        
    & + label
        display inline-block
        padding-left 4px
        vertical-align middle
        opacity(1)
            
    &.active
        &:before
            background-color $color-teal
            
    &__wrapper
        display inline-block
        margin 0 6px 0
        position relative

input[type='radio']:not(.input--default)
    appearance none
    bottom 0
    left 0
    opacity 0
    position absolute
    right 0
    top 0
    size(100%)
    
    &:focus
        outline none    
