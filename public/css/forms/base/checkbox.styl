.field__checkbox
    display inline-block
    margin 5px 15px 0
    position relative
    
    @media $sm-up
        padding 22px 0 7px

.checkbox
    border 1px solid $color-blue-grey
    border-radius 50%
    display inline-block
    position relative
    top -1px
    vertical-align middle
    size(12px)
        
    &:before
        background-color transparent
        border-radius 50%
        content ''
        display inline-block
        left 1px
        position absolute
        top 1px
        size(8px)
        
    & + label
        display inline-block
        padding-left 10px
        vertical-align middle
        opacity(1)
            
    &.active
        &:before
            background-color $color-green

input[type='checkbox']
    appearance none
    bottom 0
    left 0
    opacity 0
    position absolute
    right 0
    top 0
    size(100%)
    
    &:focus
        outline none    
