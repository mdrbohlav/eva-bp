responsive-visibility()
  display block !important

  table&
    display table

  tr&
    display table-row !important

  th&,
  td&
    display table-cell !important

responsive-invisibility()
  display none !important

@-ms-viewport
  width device-width

.visible-xs,
.visible-sm,
.visible-md,
.visible-lg
  responsive-invisibility()

.visible-xs-block,
.visible-xs-inline,
.visible-xs-inline-block,
.visible-sm-block,
.visible-sm-inline,
.visible-sm-inline-block,
.visible-md-block,
.visible-md-inline,
.visible-md-inline-block,
.visible-lg-block,
.visible-lg-inline,
.visible-lg-inline-block
  display none !important

.visible-xs
  @media (max-width $xs-max)
    responsive-visibility()

.visible-xs-block
  @media (max-width $xs-max)
    display block !important

.visible-xs-inline
  @media (max-width $xs-max)
    display inline !important

.visible-xs-inline-block
  @media (max-width $xs-max)
    display inline-block !important

.visible-sm
  @media (min-width $sm-min) and (max-width $sm-max)
    responsive-visibility()

.visible-sm-block
  @media (min-width $sm-min) and (max-width $sm-max)
    display block !important

.visible-sm-inline
  @media (min-width $sm-min) and (max-width $sm-max)
    display inline !important

.visible-sm-inline-block
  @media (min-width $sm-min) and (max-width $sm-max)
    display inline-block !important

.visible-md
  @media (min-width $md-min) and (max-width $md-max)
    responsive-visibility()

.visible-md-block
  @media (min-width $md-min) and (max-width $md-max)
    display block !important

.visible-md-inline
  @media (min-width $md-min) and (max-width $md-max)
    display inline !important

.visible-md-inline-block
  @media (min-width $md-min) and (max-width $md-max)
    display inline-block !important

.visible-lg
  @media (min-width $lg-min)
    responsive-visibility()

.visible-lg-block
  @media (min-width $lg-min)
    display block !important

.visible-lg-inline
  @media (min-width $lg-min)
    display inline !important

.visible-lg-inline-block
  @media (min-width $lg-min)
    display inline-block !important

.hidden
  display none

.hidden-xs
  @media (max-width $xs-max)
    responsive-invisibility()

.hidden-sm
  @media (min-width $sm-min) and (max-width $sm-max)
    responsive-invisibility()

.hidden-md
  @media (min-width $md-min) and (max-width $md-max)
    responsive-invisibility()

.hidden-lg
  @media (min-width $lg-min)
    responsive-invisibility()

.visible-print
  responsive-invisibility()

  @media print
    responsive-visibility()

.visible-print-block
  display none !important

  @media print
    display block !important

.visible-print-inline
  display none !important

  @media print
    display inline !important

.visible-print-inline-block
  display none !important

  @media print
    display inline-block !important

.hidden-print
  @media print
    responsive-invisibility()
